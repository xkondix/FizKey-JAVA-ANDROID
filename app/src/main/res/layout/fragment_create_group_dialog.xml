<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    tools:context=".quizzes.firebase.view.group.CreateGroupDialogFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizzes.firebase.view.login.FirstLoginDialogFragment">

        <EditText
            android:id="@+id/name_create_group_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/hello_blank_fragment" />

        <EditText
            android:id="@+id/descricption_create_group_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/name_create_group_dialog_fragment"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/descricption_create_group_dialog_fragment"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:id="@+id/ok_create_group_dialog_fragment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/descricption_create_group_dialog_fragment"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:id="@+id/cancel_create_group_dialog_fragment"/>

    </RelativeLayout>

</FrameLayout>